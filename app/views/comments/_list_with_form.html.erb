<%= form_for(@comment, url: article_comments_path(@article), remote: true,
             html: { role: 'form', class: 'form' }) do |f| %>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :text_content, "Comment" %>
    <%= f.text_area :text_content, rows: 3, class: 'form-control' %>
  </div>
  <div class="form-group text-right">
    <%= f.submit('Add comment', class: 'btn btn-success') %>
  </div>
<% end %>

<div class="comments comments-list">
  <%= render partial: 'comments/list', locals: { comments: comments } %>
</div>