<%= form_for(@article, html: { class: 'form', role: 'form'}) do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <% if @article.errors[:title].any? %>
      <div class="help-block alert alert-danger"><%= @article.errors[:title].join(". ") %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :text_content %>
    <%= f.text_area :text_content, class: 'form-control' %>
  </div>

  <div class="text-right">
    <%= f.submit('Create', class: 'btn btn-success') %>
  </div>
<% end %>